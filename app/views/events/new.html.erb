<%= render "shared/errors_banner", :object => @event %>

<div class="card mx-auto sign-up-card p-3 my-2">
  <%= form_with model: @event do |f| %>

    <div class="mb-3 pb-3">
      <%= f.label :name, hidden: true, class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Event name", class: "form-control" %>
    </div>

    <div class="mb-3 pb-3">
      <%= f.label :time, hidden: true, class: "form-label" %>
      <%= f.datetime_local_field :time, autofocus: true, autocomplete: "time", class: "form-control" %>
    </div>

    <div class="mb-3 pb-3">
      <%= f.label :location, hidden: true, class: "form-label" %>
      <%= f.text_field :location, autofocus: true, autocomplete: "location", placeholder: "Location", class: "form-control" %>
    </div>

    <div class="mb-3 pb-3">
      <%= f.label :description, hidden: true, class: "form-label" %>
      <%= f.text_area :description, autofocus: true, autocomplete: "description", placeholder: "Description", class: "form-control" %>
    </div>

    <div class="actions d-grid gap-2 pb-3">
      <%= f.submit "Create event", class: "btn btn-success" %>
    </div>
  <% end %>
</div>