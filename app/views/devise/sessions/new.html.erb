<div class="card mx-auto sign-up-card p-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="text-center py-3">
      <%= image_tag "lock-fill.svg", alt: "lock symbol", height: 100 %>
    </div>
    <div class="mb-3 py-3">
      <%= f.label :email, "Email address", class: "form-label", hidden: true %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    </div>

    <div class="mb-3 pb-3">
      <%= f.label :password, class: "form-label", hidden: "true" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    </div>

    <div class="actions d-grid gap-2 pb-3">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="text-center">
    Not Reigstered?
    <%= render "devise/shared/links" %>
  </div>
</div>