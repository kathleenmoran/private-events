<%= render "shared/errors_banner", :object => resource %>

<div class="card mx-auto sign-up-card p-3 my-2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="mb-3 pb-3">
      <%= f.label :email, hidden: true, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
    </div>

    <div class="mb-3 pb-3">
      <%= f.label :username, hidden: true, class: "form-label" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "form-control" %>
    </div>

    <div class="mb-3 pb-2">
      <%= f.label :password, class: "form-label", hidden: true %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
      <small id="passwordHelp" class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
    </div>

    <div class="mb-3 pb-3">
      <%= f.label :password_confirmation, hidden: true, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-control" %>
    </div>

    <div class="actions d-grid gap-2 pb-3">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  <% end %>
  <div class="text-center">
    Already Have an Account?
    <%= render "devise/shared/links" %>
  </div>
</div>